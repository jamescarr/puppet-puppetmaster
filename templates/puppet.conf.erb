[main]
  logdir = <%=       scope.lookupvar('::puppetmaster::logdir')       %>
  vardir = <%=       scope.lookupvar('::puppetmaster::vardir')       %>
  ssldir = <%=       scope.lookupvar('::puppetmaster::ssldir')       %>
  rundir = <%=       scope.lookupvar('::puppetmaster::rundir')       %>
  factpath = <%=     scope.lookupvar('::puppetmaster::factpath')     %>
  hiera_config = <%= scope.lookupvar('::puppetmaster::hiera_config') %>
  environment = <%=  scope.lookupvar('::puppetmaster::environment')  %>
  certname = <%=     scope.lookupvar('::puppetmaster::certname')     %>
<% unless scope.lookupvar('::puppetmaster::dns_alt_names').empty?   -%>
  dns_alt_names = <%= scope.lookupvar('::puppetmaster::dns_alt_names').join(',') %>
<% end -%>
<% unless scope.lookupvar('::puppetmaster::ca_server').empty?   -%>
  ca_server = <%= scope.lookupvar('::puppetmaster::ca_server') %>
<% end -%>

[master]
  ssl_client_header = <%=        scope.lookupvar('::puppetmaster::ssl_client_header')        %>
  ssl_client_verify_header = <%= scope.lookupvar('::puppetmaster::ssl_client_verify_header') %>
  autosign = <%=                 scope.lookupvar('::puppetmaster::autosign')                 %>
  manifest = <%=                 scope.lookupvar('::puppetmaster::manifest')                 %>
  templatedir = <%=              scope.lookupvar('::puppetmaster::templatedir')              %>
  modulepath = <%=               scope.lookupvar('::puppetmaster::modulepath')               %>
  ca_name = <%=                  scope.lookupvar('::puppetmaster::ca_name')                  %>
  ca = <%=                       scope.lookupvar('::puppetmaster::ca')                       %>
<% unless scope.lookupvar('::puppetmaster::node_terminus').empty?   -%>
  node_terminus = <%= scope.lookupvar('::puppetmaster::node_terminus') %>
<% end -%>
<% unless scope.lookupvar('::puppetmaster::external_nodes').empty?   -%>
  external_nodes = <%= scope.lookupvar('::puppetmaster::external_nodes') %>
<% end -%>

[agent]
  report = <%= scope.lookupvar('::puppetmaster::report') %>
<% unless scope.lookupvar('::puppetmaster::server').empty? -%>
  server = <%= scope.lookupvar('::puppetmaster::server') %>
<% end -%>
  runinterval = <%= scope.lookupvar('::puppetmaster::runinterval') %>
  splay = <%= scope.lookupvar('::puppetmaster::splay') %>
  splaylimit = <%= scope.lookupvar('::puppetmaster::splaylimit') %>
  noop = <%= scope.lookupvar('::puppetmaster::noop_mode') %>
